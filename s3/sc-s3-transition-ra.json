{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Service Catalog: EC2 Reference Architecture: Private restricted access bucket with S3-IA and Glacier transition rules. Note - Review transition rules before you distribute this template (fdp-1oc5gsre6)Copyright 2018 Amazon.com, Inc. or its affiliates. All Rights Reserved.Licensed under the Apache License, Version 2.0 (the \"License\"). You may not use this file except in compliance with the License.A copy of the License is located at http://www.apache.org/licenses/LICENSE-2.0 or in the \"license\" file accompanying this file. This file is distributed on an \"AS IS\" BASIS, WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied. See the License for the specific language governing permissions and limitations under the License.",
    "Metadata": {
        "AWS::CloudFormation::Interface": {
            "ParameterGroups": [
                {
                    "Label": {
                        "default": "S3 Bucket Lifecycle Configuration"
                    },
                    "Parameters": [
                        "S3ToS3IADelay",
                        "S3ToGlacierDelay",
                        "S3ObjectDeletionDelay"
                    ]
                }
            ]
        }
    },
    "Parameters": {
        "S3ToS3IADelay": {
            "Description": "Number of days of inactivity before an S3 object is transitioned from S3 to S3-IA",
            "Type": "Number",
            "Default": "30",
            "MinValue": "30",
            "MaxValue": "90",
            "ConstraintDescription": "Valid values range from 30 to 90"
        },
        "S3ToGlacierDelay": {
            "Description": "Number of days of inactivity before an S3-IA object is transitioned from S3-IA to Glacier.",
            "Type": "Number",
            "Default": "90",
            "MinValue": "90",
            "MaxValue": "180",
            "ConstraintDescription": "Valid values range from 90 to 180"
        },
        "S3ObjectDeletionDelay": {
            "Description": "Number of days before an S3 object permanently deleted.",
            "Type": "Number",
            "MinValue": "180",
            "MaxValue": "360",
            "ConstraintDescription": "Valid values range from 180 to 360"
        }
    },
    "Resources": {
        "S3Bucket": {
            "Type": "AWS::S3::Bucket",
            "DeletionPolicy": "Delete",
            "Properties": {
                "AccessControl": "Private",
                "LifecycleConfiguration": {
                    "Rules": [
                        {
                            "Status": "Enabled",
                            "Transitions": [
                                {
                                    "StorageClass": "STANDARD_IA",
                                    "TransitionInDays": {
                                        "Ref": "S3ToS3IADelay"
                                    }
                                },
                                {
                                    "StorageClass": "GLACIER",
                                    "TransitionInDays": {
                                        "Ref": "S3ToGlacierDelay"
                                    }
                                }
                            ],
                            "ExpirationInDays": {
                                "Ref": "S3ObjectDeletionDelay"
                            }
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "SC-S3-RA-S3-Bucket"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "BucketName": {
            "Value": {
                "Ref": "S3Bucket"
            }
        },
        "S3ToS3IADelay": {
            "Value": {
                "Ref": "S3ToS3IADelay"
            }
        },
        "S3ToGlacierDelay": {
            "Value": {
                "Ref": "S3ToGlacierDelay"
            }
        },
        "S3ObjectDeletionDelay": {
            "Value": {
                "Ref": "S3ObjectDeletionDelay"
            }
        },
        "BucketARN": {
            "Value": {
                "Fn::GetAtt": [
                    "S3Bucket",
                    "Arn"
                ]
            }
        }
    }
}
